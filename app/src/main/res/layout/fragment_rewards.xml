<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#212121"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/text_rewards_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rewards"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <!-- CardView for each Reward -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:backgroundTint="#EEEEEE">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/medalha_de_ouro"
                android:contentDescription="Gold Medal" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/text_gold_medal_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gold Medal"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/text_gold_medal_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Achieve 5 weekly goals"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <ProgressBar
                    android:id="@+id/progress_gold_medal"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:progressDrawable="@drawable/progress_bar_custom"
                    android:progress="80"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Silver Medal Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:backgroundTint="#EEEEEE">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/medalha_de_prata"
                android:contentDescription="Silver Medal" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/text_silver_medal_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Silver Medal"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/text_silver_medal_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Achieve 3 weekly goals"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <ProgressBar
                    android:id="@+id/progress_silver_medal"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:progressDrawable="@drawable/progress_bar_custom"
                    android:progress="60"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Bronze Medal Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:backgroundTint="#EEEEEE">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/medalha_de_bronze"
                android:contentDescription="Bronze Medal" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/text_bronze_medal_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bronze Medal"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/text_bronze_medal_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Achieve 1 weekly goal"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <ProgressBar
                    android:id="@+id/progress_bronze_medal"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:progressDrawable="@drawable/progress_bar_custom"
                    android:progress="30"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Claim Rewards Button -->
    <Button
        android:id="@+id/button_claim_rewards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:text="Claim Rewards"
        android:textColor="#000000"
        android:textAllCaps="false"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:background="@drawable/button_background"/>
</LinearLayout>
