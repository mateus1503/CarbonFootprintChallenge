<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background of the ProgressBar -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#424242"/>
            <corners android:radius="12dp"/> <!-- Bordas arredondadas para o fundo -->
        </shape>
    </item>

    <!-- Progress part of the ProgressBar -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#32CD32"/> <!-- Cor verde suave para progresso -->
                <corners android:radius="12dp"/> <!-- Bordas arredondadas para o progresso -->
            </shape>
        </clip>
    </item>
</layer-list>
