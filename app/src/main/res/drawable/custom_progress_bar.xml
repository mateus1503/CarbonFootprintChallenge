<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fundo da barra de progresso (cor clara) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#E0E0E0" /> <!-- Cor de fundo, cinza claro -->
        </shape>
    </item>

    <!-- Barra de progresso (cor laranja) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="8dp" />
                <solid android:color="#FFA500" /> <!-- Cor da barra de progresso -->
            </shape>
        </clip>
    </item>

</layer-list>
